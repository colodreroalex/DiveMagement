<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    tools:context=".Delete_inmersion"
    android:background="@drawable/fondoapp">

    <!-- EditText para recoger el nombre de la inmersión -->
    <EditText
        android:id="@+id/editTextNombreInmersion"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:hint="Nombre de la inmersión a eliminar"
        android:inputType="text"
        android:padding="12dp"
        android:textStyle="bold|italic" />

    <!-- Botón para eliminar la inmersión -->
    <Button
        android:id="@+id/botonEliminarInmersion"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Eliminar Inmersión"
        android:layout_marginTop="20dp"
        android:background="@color/lightBlue"
        android:layout_below="@id/editTextNombreInmersion"
        android:textColor="@color/white"
        android:textSize="20sp"
        android:textStyle="italic|bold"/>

    <!-- Botón "Atrás" -->
    <Button
        android:id="@+id/botonAtras"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/botonEliminarInmersion"
        android:text="Atrás"
        android:textColor="@color/white"
        android:textSize="20sp"
        android:textStyle="italic|bold"
        android:layout_marginTop="16dp"/>

</RelativeLayout>


