<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="90dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardElevation="8dp"
    app:cardCornerRadius="10dp"
    android:layout_marginHorizontal="14dp"
    android:layout_marginVertical="8dp"
    app:cardBackgroundColor="@color/purple">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="8dp">

        <ImageView
            android:id="@+id/cardViewImage"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_centerVertical="true"
            android:padding="8dp"
            android:scaleType="centerCrop"
            android:src="@color/white" />

        <!-- TextView para el nombre de la inmersión -->
        <TextView
            android:id="@+id/cardViewTitle"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_toRightOf="@+id/cardViewImage"
            android:text="Nombre de la Inmersión"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:textStyle="italic|bold"/>

        <!-- TextView para la profundidad -->
        <TextView
            android:id="@+id/cardViewDepthLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/cardViewTitle"
            android:layout_marginLeft="8dp"
            android:layout_toRightOf="@+id/cardViewImage"
            android:text="Profundidad:"
            android:textColor="@color/white"
            android:textStyle="italic|bold"/>

        <TextView
            android:id="@+id/cardViewProfundidad"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/cardViewTitle"
            android:layout_marginLeft="8dp"
            android:layout_toRightOf="@+id/cardViewDepthLabel"
            android:text=""
            android:textColor="@color/white"
            android:textStyle="italic|bold"/>

        <!-- TextView para la temperatura -->
        <TextView
            android:id="@+id/cardViewTempLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/cardViewTitle"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="0dp"
            android:layout_toRightOf="@+id/cardViewProfundidad"
            android:text="Temperatura:"
            android:textColor="@color/white"
            android:textStyle="italic|bold"/>

        <TextView
            android:id="@+id/cardViewTemperatura"
            android:layout_width="18dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/cardViewTitle"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="0dp"
            android:layout_toRightOf="@+id/cardViewTempLabel"
            android:text=""
            android:textColor="@color/white"
            android:textStyle="italic|bold"/>



    </RelativeLayout>

</androidx.cardview.widget.CardView>
